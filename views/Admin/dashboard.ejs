<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
  <link rel="stylesheet" href="/css/dashboard.css"/>
  <style>
    .action-buttons {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
    }
    .action-buttons form {
      margin: 0;
    }
    .edit-btn, .delete-btn {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
    }
    .delete-btn {
      background-color: #dc3545;
    }

    /* Contact Messages */
    .contact-notifications {
      margin-top: 40px;
    }
    .contact-notifications .message-card {
      border: 1px solid #ccc;
      border-left: 5px solid #007bff;
      background-color: #f9f9f9;
      padding: 15px;
      margin-bottom: 15px;
      border-radius: 5px;
    }
    .contact-notifications .unread {
      background-color: #fff3cd;
      border-left-color: #ffc107;
    }
    .contact-notifications .read {
      opacity: 0.7;
    }
    .contact-notifications .message-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      font-weight: bold;
    }
    .mark-read-btn {
      background-color: #28a745;
      color: white;
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <aside class="sidebar">
      <div class="admin-profile">
        <div class="profile-image">
          <img src="/Assets/yamm.jpg" alt="Admin Profile" id="profileImage" />
          <div class="upload-overlay">
            <label for="imageUpload"><i class="fas fa-camera"></i></label>
            <input type="file" id="imageUpload" hidden />
          </div>
        </div>
        <h3 id="adminName">Admin - Yam Kumar Rai</h3>
      </div>
      <nav class="sidebar-nav">
        <a href="#overview" class="active"><i class="fas fa-home"></i> Overview</a>
        <a href="/home"><i class="fas fa-upload"></i> Home</a>
        <a href="#settings"><i class="fas fa-cog"></i> Settings</a>
        <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </nav>
    </aside>

    <main class="main-content">
      <header class="dashboard-header">
        <div class="header-title">
          <h1>Admin</h1>
        </div>
        <div class="header-actions">
          <button class="notifications-btn">
            <i class="fas fa-bell"></i>
            <span class="notification-badge"></span>
          </button>
        </div>
      </header>

      <div class="dashboard-stats">
        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-project-diagram"></i></div>
          <div class="stat-details">
            <h3><%= projects.length %></h3>
            <p>Total Projects</p>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-eye"></i></div>
          <div class="stat-details">
            <h3>0</h3>
            <p>Total Views</p>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-download"></i></div>
          <div class="stat-details">
            <h3>0</h3>
            <p>CV Downloads</p>
          </div>
        </div>
      </div>

      <!-- Recent Projects Section -->
      <section class="recent-projects">
        <div class="section-header">
          <h2>Recent Projects</h2>
          <button class="add-new" onclick="window.location.href='/Admin/addproject'">Add New</button>
        </div>

        <div class="projects-table">
          <table>
            <thead>
              <tr>
                <th>Project Title</th>
                <th>Description</th>
                <th>Link</th>
                <th>Date_Uploaded</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% projects.forEach(project => { %>
                <tr>
                  <td><%= project.title %></td>
                  <td><%= project.description %></td>
                  <td>
                    <% if (project.link) { %>
                      <a href="<%= project.link %>" target="_blank">View</a>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                  <td><%= new Date(project.project_date).toLocaleDateString() %></td>
                  <td>
                    <div class="action-buttons">
                      <a href="/Admin/edit/<%= project.id %>" class="edit-btn">Edit</a>
                      <form action="/Admin/delete/<%= project.id %>" method="POST">
                        <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Contact Message Notifications Section -->
      <section class="contact-notifications">
        <div class="section-header">
          <h2>üì¨ Contact Messages</h2>
        </div>

        <% if (contacts.length === 0) { %>
          <p>No messages received yet.</p>
        <% } else { %>
          <div class="contact-messages">
            <% contacts.forEach(contact => { %>
              <div class="message-card <%= contact.is_read ? 'read' : 'unread' %>">
                <div class="message-header">
                  <strong><%= contact.name %></strong>
                  <span><%= new Date(contact.created_at).toLocaleString() %></span>
                </div>
                <p><strong>Email:</strong> <%= contact.email %></p>
                <p><strong>Subject:</strong> <%= contact.subject || 'N/A' %></p>
                <p><strong>Message:</strong> <%= contact.message %></p>

                <div style="margin-top: 10px;">
                  <% if (!contact.is_read) { %>
                    <form action="/admin/contact/<%= contact.id %>/read" method="POST" style="display:inline;">
                      <button type="submit" class="mark-read-btn">Mark as Read</button>
                    </form>
                  <% } else { %>
                    <span style="color: green;">‚úîÔ∏è Read</span>
                  <% } %>

                  <form action="/admin/contact/<%= contact.id %>/delete" method="POST" style="display:inline; margin-left: 10px;">
                    <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this message?')">Delete</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </section>
    </main>
  </div>

  <script>
    const imageUpload = document.getElementById('imageUpload');
    const profileImage = document.getElementById('profileImage');
    imageUpload.addEventListener('change', function (e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          profileImage.src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });

    const navLinks = document.querySelectorAll('.sidebar-nav a');
    navLinks.forEach(link => {
      link.addEventListener('click', function () {
        navLinks.forEach(l => l.classList.remove('active'));
        this.classList.add('active');
      });
    });

    document.querySelector('.notifications-btn').addEventListener('click', () => {
      alert('Notifications feature coming soon!');
    });

    document.querySelector('.logout-btn').addEventListener('click', function (e) {
      e.preventDefault();
      if (confirm('Are you sure you want to logout?')) {
        window.location.href = '/logout';
      }
    });
  </script>
</body>
</html>
